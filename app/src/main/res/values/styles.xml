<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Browser Activity Toolbar Text Appearance -->
    <style name="TextAppearance.YSports.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextAppearance.YSports.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.YSports.BottomSheet.Modal" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="Theme.YSports.TitleLarge">
        <item name="android:textSize">@dimen/text_size_title_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/onBackground</item>
        <item name="android:letterSpacing">0</item>
        <item name="lineHeight">28sp</item>
        <item name="android:lineHeight" tools:targetApi="p">28sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.YSports.TextPrimary">
        <item name="android:textSize">@dimen/text_size_primary</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>