<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Checked. -->
    <!-- Uses the on surface state layer since tapping a checked selection control
        will turn it to the unchecked color. -->
    <item android:alpha="0.12" android:color="?attr/colorOnSurface" android:state_checked="true" android:state_pressed="true" />
    <item android:alpha="0.2" android:color="?attr/colorPrimary" android:state_checked="true" android:state_focused="true" />
    <item android:alpha="0.4" android:color="?attr/colorPrimary" android:state_checked="true" android:state_hovered="true" />
    <item android:alpha="0.16" android:color="?attr/colorPrimary" android:state_checked="true" />

    <!-- Unchecked. -->
    <!-- Uses the primary state layer since tapping an unchecked selection
        control will turn it to the checked color. -->
    <item android:alpha="0.12" android:color="?attr/colorPrimary" android:state_pressed="true" />
    <item android:alpha="0.2" android:color="?attr/colorOnSurface" android:state_focused="true" />
    <item android:alpha="0.4" android:color="?attr/colorOnSurface" android:state_hovered="true" />
    <item android:alpha="0.16" android:color="?attr/colorOnSurface" />
</selector>